<div class="row">
  <div class="col-lg-12">
    <h5 class="league-name"><%= @league.name %></h5>
    <small class="start-end-dates">League Dates: <%= @league.full_start_date %></small>
    <small class="start-end-dates"> - In Progress</small>
    <small class="active-status"> | <%= @league.active_status %> | </small>
    <small class="number-of-members"><%= @league.memberships_translator %></small>

    <table class="table table-responsive-lg table-striped table-bordered league-table mt-4">
      <thead>
        <tr>
          <th scope="col">Team</th>
          <% @range.each do |n| %>
            <th class="accomplishment text-center"><%= n %></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @teams.each do |team| %>
          <tr>
            <td>
              <span class="team-name">
                <%= team.name %>
              </span>
              <% if Team.owned_teams_by_league(@league.id).include?(team) %>
                <span class="ownership-text">
                  <%= team.owner_email_by_league(@league) %>
                </span>
              <% elsif policy(@league).admin? %>
                <div>
                  <%= link_to 'Assign Team', new_league_ownership_path(@league, team_id: team.id), class: 'assign-team-link' %>
                </div>
              <% end %>
              <div class="progress" style="height: 25px;">
                <div class="progress-bar progress-bar-striped" role="progressbar" style="width: <%= team.completion_percentage_by_league(@league) %>;" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100">
                  <%= team.progress_bar_numbers(@league, @range) %>
                </div>
              </div>
            </td>
            <% @range.each do |n| %>
              <td class="text-center">
                <% acc = @accomplishments.find_by(team_id: team.id, number: n)&.decorate %>
                <% if acc %>
                  <span data-toggle="tooltip" data-placement="top" title="<%= acc.short_date %>"><%= fa_icon "check" %></span>
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>
