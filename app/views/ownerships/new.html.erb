<div class="row justify-content-md-center">
  <div class="col-md-5">
    <div class="card">
      <div class="card-header form-title">
        Assign Team
      </div>
      <div class="card-body">
        <%= form_for [@league, @league.ownerships.new] do |f| %>
          <%= f.fields_for User.new do |ff| %>
          <div class="field form-group">
            <%= ff.label :email, 'User Email', class: 'form-labels' %>
            <%= ff.text_field :email, class: 'form-control' %>
          </div>
          <% end %>
        <%= f.hidden_field :team_id, value: params[:team_id] %>
        <%= f.submit 'Assign!', class: 'btn btn-outline-secondary btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
